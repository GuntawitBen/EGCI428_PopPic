<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter post content"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextMediaUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter media URL (auto-filled after upload)"
        android:inputType="text"
        android:enabled="false" /> <!-- Set to disabled if URL will be filled automatically -->

    <Button
        android:id="@+id/btnUploadImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/btnSavePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Post"
        android:layout_gravity="center"
        android:layout_marginTop="8dp" />

</LinearLayout>
